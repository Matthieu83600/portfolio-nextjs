{
  "name": "portfolio",
  "version": "0.7.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "release": "release-it"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "tagName": "v${version}",
      "commitMessage": "chore: release ${version}",
      "push": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "pnpm lint"
      ]
    }
  },
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "next": "15.3.4",
    "next-intl": "^3.26.3",
    "next-themes": "^0.4.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.4.0",
    "swiper": "^11.1.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.3",
    "@types/node": "^20",
    "@types/react": "19.1.1",
    "@types/react-dom": "19.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.0",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "release-it": "^17.11.0",
    "release-it-pnpm": "^4.6.6",
    "tailwindcss": "^4.1.3",
    "typescript": "^5"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.1",
      "@types/react-dom": "19.1.2"
    }
  }
}
